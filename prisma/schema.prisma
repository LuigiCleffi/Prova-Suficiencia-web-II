generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId          String    @id @default(uuid())
  name            String
  passwordHash    String
  userPhoneNumber String    @unique
  createdAt       DateTime  @default(now())
  products        Product[]

  @@map("users")
}

model Product {
  id            String @id @default(uuid())
  name          String
  price         Float
  productUserId String
  user          User   @relation(fields: [productUserId], references: [userId])

  @@map("products")
}
